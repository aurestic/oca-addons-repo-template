name: Update Template

on:
  push:
    branches:
      - "{{ odoo_version }}"
  schedule:
    - cron: "0 8 * * *"

jobs:
  update:
    name: Update Odoo Module Template
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - name: Installing copier
        run: |
         pipx install copier
         pipx install pre-commit
         pipx ensurepath

      - name: Updating template
        id: copier
        shell: bash
        run: |
          copier -f update > /dev/null 2>&1
          VERSION=$(cat .copier-answers.yml|grep _commit|awk '{print $2}')
          echo "::set-output name=VERSION::$VERSION"

      - name: Check for uncommitted changes
        id: check-changes
        shell: bash
        run: |
          if [[ `git status --porcelain` ]]; then
            echo "::set-output name=CHANGES::1"
          else
            echo "::set-output name=CHANGES::0"
          fi

      - name: Create Pull Request
        if: steps.check-changes.outputs.CHANGES == 1
        id: cpr
        uses: peter-evans/create-pull-request@v4
        with:
          token: {% raw %}${{ secrets.GH_UPDATE_ODOO_TEMPLATE }}{% endraw %}
          commit-message: {% raw %}'[UPD] Updating template to ${{ steps.copier.outputs.VERSION }}'{% endraw %}
          committer: GitHub <noreply@github.com>
          author: {% raw %}${{ github.actor }} <${{ github.actor }}@users.noreply.github.com>{% endraw %}
          branch: gh/addons-template-update
          delete-branch: true
          title: '[UPD] Odoo module template'
          body: {% raw %}|
            Updating to version ${{ steps.copier.outputs.VERSION }}

            Automated changes by [Aurestic Github Action](https://github.com/aurestic/oca-addons-repo-template/blob/master/src/.github/workflows/template.yml){% endraw %}
          labels: |
            template
            automated pr
          reviewers: |
            almumu
            JordiToledo
            carlosbej2
          draft: false
